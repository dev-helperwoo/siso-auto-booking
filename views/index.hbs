<!DOCTYPE html>
<html>

<head>
    <title>App</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 dark:bg-gray-700">
    <div class="w-full relative p-6 overflow-x-auto dark:bg-gray-800 dark:border-gray-700 mb-6">
        <input type="search" id="id"
            class="block p-4 mb-4 ps-5 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            placeholder="id" required>
        <input type="search" id="pw"
            class="block p-4 mb-4 ps-5 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            placeholder="pw" required>
        <button type="submit"
            class="text-white bg-green-700 hover:bg-green-800 focus:outline-none focus:ring-4 focus:ring-green-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800"
            onclick="run()">
            Run
        </button>
        <button type="submit"
            class="text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-4 focus:ring-red-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800"
            onclick="quit()">
            Quit
        </button>
    </div>

    <div class="w-full relative p-6 overflow-x-auto dark:bg-gray-800 dark:border-gray-700 mb-6 text-white" id="result">
    </div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        let isRun = false;
        let isQuit = false;

        function run() {
            if (!isRun) {
                isRun = true;
                execute();
            }
        }

        function quit() {
            if (isRun) isQuit = true;
        }

        function execute() {
            const data = {
                id: document.getElementById("id").value,
                pw: document.getElementById("pw").value,
            }

            axios.post('/api/siso', data)
                .then(function (res) {
                    document.getElementById("result").innerHTML = res.data.data;
                })
                .catch(function (e) {
                    document.getElementById("result").innerHTML = e.response.data.msg;

                    if (isQuit) {
                        isRun = false;
                        isQuit = false;
                    } else {
                        execute();
                    }
                });
        }
    </script>
</body>

</html>